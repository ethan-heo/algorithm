{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "lib": ["ESNext", "DOM"],
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "types": [],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["patterns/**/*"],
    "exclude": ["node_modules"]
}
